<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registro_sitio_txvMes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/COLOR_3"
    android:backgroundTint="@color/COLOR_3"
    tools:context=".RegistrarSitio">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/COLOR_1"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Registro de Sitio"
        app:titleTextColor="@color/COLOR_4" />

    <EditText
        android:id="@+id/registro_nombresitio"
        android:layout_width="324dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="@string/registrositio_txvnombre"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/registrositio_coordenadas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_toolbar" />

    <TextView
        android:id="@+id/registrositio_coordenadas"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:layout_marginTop="53dp"
        android:gravity="center"
        android:text="Coordenadas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registro_nombresitio" />

    <EditText
        android:id="@+id/registrositio_radiacion"
        android:layout_width="321dp"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:hint="RadiaciÃ³n"
        app:layout_constraintTop_toBottomOf="@+id/registrositio_coordenadas"
        tools:layout_editor_absoluteX="45dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrositio_radiacion">

        <RadioButton
            android:id="@+id/registro_sitio_radioButtonInterconectado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Interconectado" />

        <RadioButton
            android:id="@+id/registro_sitio_radioButtonAutonomo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Autonomo" />
    </RadioGroup>

    <EditText
        android:id="@+id/registro_sitio_txvMes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:hint="Mes 1(kWh)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <EditText
        android:id="@+id/registro_sitio_txvMes2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Mes 2(kWh)"
        app:layout_constraintTop_toBottomOf="@+id/registro_sitio_txvMes" />

    <EditText
        android:id="@+id/registro_sitio_txvMes3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Mes 3(kWh)"
        app:layout_constraintTop_toBottomOf="@+id/registro_sitio_txvMes2" />

    <EditText
        android:id="@+id/registro_sitio_txvMes4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Mes 4(kWh)"
        app:layout_constraintTop_toBottomOf="@+id/registro_sitio_txvMes3" />

    <EditText
        android:id="@+id/registro_sitio_txvMes5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Mes 5(kWh)"
        app:layout_constraintTop_toBottomOf="@+id/registro_sitio_txvMes4" />

    <EditText
        android:id="@+id/registro_sitio_txvMes6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Mes 6(kWh)"
        app:layout_constraintTop_toBottomOf="@+id/registro_sitio_txvMes5" />

    <Button
        android:id="@+id/registrositio_btnconsumo"
        android:layout_width="303dp"
        android:layout_height="77dp"
        android:text="@string/registrositio_btnconsumo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/registrositio_paneles"
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="# de Paneles"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrositio_btnconsumo" />

</androidx.constraintlayout.widget.ConstraintLayout>